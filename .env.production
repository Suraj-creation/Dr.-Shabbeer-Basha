# ============================================
# DL Course Platform - PRODUCTION Environment
# ============================================
# These are the environment variables to set in Vercel Dashboard
# Go to: Vercel > Your Project > Settings > Environment Variables
# ============================================

# REQUIRED VARIABLES (Must set these in Vercel)
# ============================================

NODE_ENV=production

# MongoDB Atlas Connection String
# IMPORTANT: Make sure to whitelist 0.0.0.0/0 in Atlas Network Access for Vercel
MONGODB_URI=mongodb+srv://dlcourse:lCxZUuFhBOrIycQb@cluster0.u6dyo4p.mongodb.net/dl-course-platform?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret - CHANGE THIS TO A STRONG RANDOM VALUE!
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=REPLACE_WITH_STRONG_SECRET_IN_VERCEL

# Your Vercel App URL (update after first deployment)
CLIENT_URL=https://your-app-name.vercel.app

# ============================================
# OPTIONAL VARIABLES (Have sensible defaults)
# ============================================

# JWT token expiration
JWT_EXPIRES_IN=7d

# File upload limits
MAX_FILE_SIZE=10485760

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Logging level (production should use 'combined' or 'common')
LOG_LEVEL=combined
